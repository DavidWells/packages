{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noImplicitThis": false
  },
  "include": ["index.js"],
  "exclude": ["node_modules", "**/*.test.js"]
} 